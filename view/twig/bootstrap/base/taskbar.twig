{% import _self as functions %}

{% macro taskbarMenuItems(items, class) %}
    {% for item in items %}
        {% if item == '-' %}
            <li role="presentation" class="divider"></li>
        {% elseif item|type == 'string' %}
            <li role="presentation" class="dropdown-header">{{ item }}</li>
        {% elseif item.hasItems() is not defined %}
            <li><a href="{{ item.getUrl() }}">{{ item.getLabel() }}</a></li>
        {% elseif class %}
            <li class="{{ class }}">
                <a href="#" tabindex="-1" class="dropdown-toggle" data-toggle="dropdown">{{ item.getLabel() }} <b class="caret"></b></a>
                <ul class="dropdown-menu">
                {{ _self.taskbarMenuItems(item.getItems(), "dropdown-submenu") }}
                </ul>
            </li>
        {% else %}
            <li role="presentation" class="dropdown-header">{{ item.getLabel() }}</li>
            {{ functions.taskbarMenuItems(item.getItems()) }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro taskbarPanelSearch(url, method, query) %}
    {% if method is not defined %}
        {% set method = "POST" %}
    {% endif %}
    <li>
        <form action="{{ url }}" class="navbar-form" role="search" method="{{ method }}">
            <input type="text" name="query" class="form-control" placeholder="{{ translate("label.search") }}" value="{{ query|escape }}" />
        </form>
    </li>
{% endmacro %}

{% macro taskbarPanelLocales(url, locale, locales) %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            {{ locale|upper }}
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
        {% for code, locale in locales %}
            <li>
                <a href="{$url|replace:"%25locale%25":$code}">
                    {{ translate("language.`code`") }}
                </a>
            </li>
        {% endfor %}
        </ul>
    </li>
{% endmacro %}

<div class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% block taskbar_title %}<a class="navbar-brand" href="{{ app.url.base }}">{{ title }}</a>{% endblock taskbar_title %}
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            {% block taskbar_applications %}
                {% if applicationsMenu.hasItems() %}
                    {{ functions.taskbarMenuItems(applicationsMenu.getItems(), "dropdown") }}
                {% endif %}
            {% endblock taskbar_applications %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% block taskbar_panels %}{% endblock taskbar_panels %}
                {% block taskbar_menu %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        {% if app.user %}
                            {{ app.user.getDisplayName() }}
                        {% else %}
                            {{ translate("label.user.anonymous") }}
                        {% endif %}
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">

                        {% block taskbar_settings %}
                            {% if settingsMenu.hasItems() %}
                                {{ functions.taskbarMenuItems(settingsMenu.getItems(), "dropdown") }}
                            {% endif %}
                        {% endblock taskbar_settings %}
                    </ul>
                </li>
                {% endblock taskbar_menu %}
            </ul>
        </div><!--/.navbar-collapse -->
    </div>
</div>
